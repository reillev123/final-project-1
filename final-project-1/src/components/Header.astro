---
 <!-- Creating header at top of site with site name and href links to various pages on the site  -->
    <header class="header text-white p-3">
        <div class="container">
            <div class="header-content">
                <div class="logotext">
                    <a class="logotext" href="/">BakeMyDay</a>
                </div>
                <nav class="nav" id="nav">
                    <ul class="nav-list">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="nav-link text-white" href="/recipes/recipes">Recipes</a>
                                <div class="dropdown-content">
                                    <a href="/recipes/dairy-free">Dairy Free</a>
                                    <a href="/recipes/gluten-free">Gluten Free</a>
                                    <a href="/recipes/kid-friendly">Kid-Friendly</a>
                                    <a href="/recipes/vegan">Vegan</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/contact">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="nav-link text-white" href="#">Users</a>
                                <div class="dropdown-content">
                                    <a href="/login">Login</a>
                                    <a href="/signup">Sign Up</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <form class="d-flex" role="search">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn" type="submit">Search</button>
                            </form>
                        </li>
                    </ul>
                </nav>
                <div class="hamburger" id="hamburger">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
    </header>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
    const hamburger = document.getElementById('hamburger');
    const nav = document.getElementById('nav');

    hamburger.addEventListener('click', () => {
        nav.classList.toggle('nav-active');
    });
});
    </script>
