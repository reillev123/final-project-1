---
let isLogin = true;

function toggleForm() {
  isLogin = !isLogin;
}
---
<div class="auth-container d-flex justify-content-center mt-5">
    <div class="card p-4" style="width: 400px;">
        <h2 class="text-center mb-4">{isLogin ? "Login" : "Sign Up"}</h2>
        <form>
             <div class="form-group"> 
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
            </div>
            <div class="form-group mt-3">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Enter your password" required>
            </div>
            <button type="submit" class="btn btn-primary mt-4 w-100">{isLogin ? "Login" : "Sign Up"}</button>
        </form>
        <div class="text-center mt-3">
            <!-- <button class="btn btn-link" on:click={toggleForm}> -->
                {isLogin ? "Don't have an account? Sign Up" : "Already have an account? Login"}
            </button>
        </div>
    </div>
</div>