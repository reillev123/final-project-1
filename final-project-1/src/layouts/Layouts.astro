---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BackToTop from '../components/BackToTop.astro';
import  '/public/styles.css'
---

<html>
<head>
    <!-- Specifies the character encoding for the HTML document -->
    <meta charset="UTF-8">
    <!-- Ensures proper rendering and touch zooming on mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Links to the Bootstrap CSS for styling the webpage -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!--Link to fontawesome icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">    <!-- Adds a custom favicon  -->
    <link rel="icon" type="image/x-icon" href="/final-project-1/images/favicon.ico">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Includes the Header component at the top of the page -->
    <Header />
    <!-- Main content area that expands to fill available space -->
    <main class="flex-fill">
        <!-- Slot element where the main content of the page will be inserted -->
        <slot />
    </main>
    <BackToTop />
    <!-- Includes the Footer component at the bottom of the page -->
    <Footer />
</body>
</html>