---
import Layout from '../../layouts/Layouts.astro';
---
<!-- Creating a Vegan recipes page -->
<head>
    <!-- Specifies the character encoding for the HTML document -->
    <meta charset="UTF-8">
    <!-- Ensures proper rendering and touch zooming on mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Links to the Bootstrap CSS for styling the webpage -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Links to an external stylesheet for custom styles -->
    <link rel="stylesheet" href="../../styles.css">
    <!-- Adds a custom favicon  -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

</head>
<Layout>
    <title>Vegan Recipes</title>
    <div class="container text-center mt-5">
        <h2>Our Favorite Vegan Recipes</h2>
        <p>Discover our collection of delightful bakery recipes that you can make at home.</p>
    </div>
</Layout>
